<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.dhbw.e_mobility.e_app"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name="de.dhbw.e_mobility.e_app.MainTabhost"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/activity_main_title"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".speedo.SpeedoPortraitActivity"
            android:label="@string/activity_tacho_title"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".speedo.SpeedoLandscapeActivity"
            android:label="@string/activity_tacho_title"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".tour_stats.StatsTourActivity"
            android:label="@string/activity_status_tour_title"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".total_stats.StatsTotalActivity"
            android:label="@string/activity_status_total_title"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".settings.SettingsActivity"
            android:label="@string/activity_settings_title"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".dialog.BluetoothDialogDiscovery"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/dialog_deviceList_title"
            android:theme="@style/AppDialog" />
        <activity
            android:name=".dialog.BluetoothDialogDisconnect"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/dialog_disconnect_title"
            android:theme="@style/AppDialog" />
        <activity
            android:name=".settings.SettingsAdvancedDialog"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/dialog_advanced_settings_title"
            android:theme="@style/AppDialog" />
        <activity
            android:name=".dialog.ReallyDialog"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/dialog_really_title"
            android:theme="@style/AppDialog" />
    </application>
    <!-- TODO Bildschirmstandby verhindern -->
    <!-- TODO Kein Vollbild, weil sonst z.B. die Pairinganfrage im Hintergrund unentdeckt bleibt -->
</manifest>