<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/speedo_portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    tools:context=".SpeedoPortraitActivity">


    <TextView
        android:id="@+id/portrait_speed_title"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/medium_text_size"
        android:text="@string/speed"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/portrait_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.01"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/portrait_speed_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.02"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/medium_large_text_size" />

    </LinearLayout>

    <Spinner
        android:id="@+id/portrait_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/portrait_tour_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:textSize="@dimen/medium_large_text_size"
            android:gravity="center"
            android:text="@string/current_tour"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/portrait_tour_reset"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/medium_small_text_size"
            android:text="@string/tour_reset" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/portrait_distance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/medium_text_size"
            android:text="@string/distance"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/portrait_duration_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/medium_text_size"
            android:text="@string/duration"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/portrait_distance"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/medium_text_size" />

        <TextView
            android:id="@+id/portrait_distance_unit"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/medium_text_size"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/portrait_duration"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/medium_text_size" />

        <TextView
            android:id="@+id/portrait_duration_unit"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/medium_text_size"
            android:gravity="center"
            android:text="@string/durationUnit"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/portrait_battery_title"
                android:layout_width="130dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:textSize="@dimen/medium_text_size"
                android:gravity="center"
                android:text="@string/battery"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/portrait_battery"
                    android:layout_width="89dp"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:text="TODO"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/portrait_battery_unit"
                    android:layout_width="84dp"
                    android:layout_height="wrap_content"
                    android:text="@string/percent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/medium_text_size" />

            </LinearLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/portrait_battery_progress_bar"
                android:layout_width="136dp"
                android:layout_height="42dp"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/portrait_assistance_title"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:gravity="center"
                android:textSize="@dimen/medium_text_size"
                android:text="@string/assistance"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/portrait_assistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text_size"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/portrait_assistance_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/percent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/medium_text_size" />

            </LinearLayout>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/portrait_assistance_progress_bar"
                android:layout_width="136dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>