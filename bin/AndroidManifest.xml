<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.dhbw.e_mobility.e_app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        <activity
            android:name="de.dhbw.e_mobility.e_app.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/activity_main_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.dhbw.e_mobility.e_app.SettingsActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/activity_settings_title"
            android:theme="@android:style/Theme.Light" >
        </activity>
        <activity
            android:name="de.dhbw.e_mobility.e_app.bluetooth.BluetoothDialogDiscovery"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/dialog_deviceList_title"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="de.dhbw.e_mobility.e_app.bluetooth.BluetoothDialogDisconnect"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/dialog_disconnect_title"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="de.dhbw.e_mobility.e_app.SettingsAdvancedDialog"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/dialog_advanced_settings_title"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="de.dhbw.e_mobility.e_app.ReallyDialog"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/dialog_really_title"
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>